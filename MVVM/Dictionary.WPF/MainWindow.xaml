<Window x:Class="Dictionary.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dictionary.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" Grid.Row="0">
            <TreeViewItem Header="Словари" x:Name="Dictionarys" IsExpanded="True">
                <TreeViewItem Header="Типы устройств" x:Name="TreeType"/>
                <TreeViewItem Header="Модели устройств" x:Name="TreeModel"/>
                <TreeViewItem Header="Местоположение" x:Name="TreeLocation"/>
                <TreeViewItem Header="СП и СИ" x:Name="TreeSp_Si"/>
            </TreeViewItem>
        </TreeView>
        <ListBox Grid.Column="1" x:Name="modelsList" ItemsSource="{Binding ModelDevices}" Visibility="Visible">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontSize="16" />
                        <TextBlock Text="{Binding DeviceType.Name}" FontSize="13" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Добавить" Margin="10" Command="{Binding AddCommand}"  />
            <Button Content="Изменить" Margin="10" Command="{Binding EditCommand}" 
                CommandParameter="{Binding ElementName=modelsList, Path=SelectedItem}"  />
            <Button Content="Удалить" Margin="10" Command="{Binding DeleteCommand}" 
                CommandParameter="{Binding ElementName=phonesList, Path=SelectedItem}"  />
        </StackPanel>
    </Grid>
</Window>
